<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Chat App</title>

    <style>
      body {
        font-family: "Poppins", sans-serif;
        background: #f2f6ff;
        margin: 0;
        padding: 20px;
      }

      .chat-box {
        background: #ffffff;
        padding: 16px;
        border-radius: 18px;
        margin: 15px 0;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.08);
        border-left: 6px solid #6c63ff;
        transition: 0.2s;
      }

      .chat-box:hover {
        transform: translateY(-3px);
        box-shadow: 0px 6px 14px rgba(0,0,0,0.12);
      }

      .chat-box p {
        margin: 6px 0;
        font-size: 15px;
        color: #333;
      }

      strong {
        color: #6c63ff;
      }

      button {
        padding: 10px 20px;
        font-size: 16px;
        background: #6c63ff;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.15);
        transition: 0.2s;
      }

      button:hover {
        background: #574bdb;
        transform: scale(1.03);
      }

      form {
        text-align: center;
        margin-top: 20px;
      }

    </style>
  </head>

  <body>

    <div>
      <% for (let data of datas) { %>
        <div class="chat-box">
          <p><strong>From:</strong> <%= data.from %></p>
          <p><strong>Message:</strong> <%= data.msg %></p>
          <p><strong>To:</strong> <%= data.to %></p>
        </div>
      <% } %>

      <form action="/chat/new" method="get">
        <button>Add New</button>
      </form>
    </div>

  </body>
</html>
